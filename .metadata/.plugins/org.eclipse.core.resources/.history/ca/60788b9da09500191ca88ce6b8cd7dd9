package übungen;

public class BinaereSuche extends EinfacheSortierung{

	public BinaereSuche(int n) {
		super(n);
		this.sortiere();
	}
	
	public int suche(int g) {
		int pos = -1;
		int a=0, e=this.zahlen.length-1;
		int m;
		while(a<=e) {
		m = (a+e)/2;
		if(this.zahlen[m]==g) {
			a = e+1;
			pos = m;
			}else {
				if(this.zahlen[m]>g) 
					e = m-1;
				else 
					a = m+1;
			}		
		}
		return pos;
	}
}
