package übungen;

public class Bubblesort extends Feld{

	public Bubblesort(int n) {
		super(n);
	}
	
	public void sortiere() {
		boolean m;
		int i , l=this.zahlen.length, hilf;
		do {
			l=l-1;
			i=0;
			m = false;
			do {
				if(this.zahlen[i]>this.zahlen[i+1]) {
					m= true;
					hilf = this.zahlen[i];
					this.zahlen[i]=this.zahlen[i+1];
					this.zahlen[i+1]=hilf;
				}
				i=i+1;
				
			}while(i<l);
			
		}while(m = true);
	}

}
